# Node Environment
NODE_ENV=development

# Application Settings
PORT=8000
LOG_LEVEL=info

# Market Data API Keys
TWELVEDATA_API_KEY=your_twelvedata_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
TRADIER_API_KEY=your_tradier_api_key_here
TRADIER_BASE_URL=https://api.tradier.com

# Database Configuration (if using persistent DB)
DATABASE_URL=postgresql://username:password@localhost:5432/leaps_engine

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Limits
MAX_POSITION_SIZE=0.10
MAX_PORTFOLIO_RISK=0.15
DEFAULT_STOP_LOSS=0.15
DEFAULT_PROFIT_TARGET=0.25

# Email Configuration (for alerts - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=alerts@leaps-engine.com

# Monitoring & Alerts
ENABLE_SYSTEM_MONITORING=true
ENABLE_RISK_ALERTS=true
ALERT_EMAIL=admin@leaps-engine.com

# External Services
WEBHOOK_URL=https://your-webhook-url.com/alerts

# Development Settings
ENABLE_CORS=true
ENABLE_SWAGGER_DOCS=true
MOCK_MARKET_DATA=false

# Replit Configuration (for Replit deployment)
REPL_SLUG=leaps-trading-engine
REPL_OWNER=your_username

# Cache Settings
CACHE_TTL_MARKET_DATA=30
CACHE_TTL_OPTION_CHAIN=300
CACHE_TTL_PORTFOLIO=60

# Strategy Parameters
SIGNAL_GENERATION_INTERVAL=240
PORTFOLIO_UPDATE_INTERVAL=60
RISK_CALCULATION_INTERVAL=300

# Screening Configuration
MAX_SCREENING_SYMBOLS=100
SCREENING_INTERVAL=14400
ENABLE_AUTO_SCREENING=true

# Order Execution
ORDER_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3
ENABLE_PAPER_TRADING=true

# System Health
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
LOG_RETENTION_DAYS=30
